{
  "manifest_version": 3,
  "name": "Page Vision",
  "version": "1.0.0",
  "icons": {
    "16": "assets/logo/16x16.png",
    "32": "assets/logo/32x32.png",
    "48": "assets/logo/48x48.png",
    "64": "assets/logo/64x64.png",
    "128": "assets/logo/128x128.png"
  },
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "web_accessible_resources": [
    {
      "resources": ["dist/assets/js/*.js", "dist/assets/css/*.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
